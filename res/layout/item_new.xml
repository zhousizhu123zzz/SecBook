<?xml version="1.0" encoding="utf-8"?>
<!-- 主页LV  > 新书上架   > item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="20dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragmentHome_tv_new"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/itemNew_tv_viewMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:drawableEnd="@drawable/icon_forward"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/icon_forward"
            android:text="@string/ViewMore"
            android:textSize="13sp" />
    </RelativeLayout>

    <com.zyd.widget.ViewGridInListView
        android:id="@+id/fragmentHome_itemNew_gv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:horizontalSpacing="20dp"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="20dp" />

    <View style="@style/view_diliver_10dp" />

</LinearLayout>