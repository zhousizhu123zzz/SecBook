<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/fragment_shoppingcart_titlebar" />

    <ListView
        android:id="@+id/fragmentShoppingCart_lv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:divider="@null"
        android:scrollbars="none" />

    <View
        android:id="@+id/fragmentShoppingCart_v_divider"
        style="@style/view_diliver_1px" />

    <RelativeLayout
        android:id="@+id/fragmentShoppingCart_rl_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fragmentShoppingCart_tv_allCoas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="33.33"
            android:textColor="#FF0000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fragmentShoppingCart_tv_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="#FF8247"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="@string/fragmentBook_tv_buyNow"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>