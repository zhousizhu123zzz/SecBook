<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/fragmentOrderDetails_ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/icon_back_black"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Back"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单支付"
            android:textColor="#000000"
            android:textSize="15sp" />
    </RelativeLayout>

    <View style="@style/view_diliver_1px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fragmentOrderDetails_tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/fragmentOrderDetails_tv_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragmentOrderDetails_tv_address"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/fragmentOrderDetails_tv_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragmentOrderDetails_tv_coupon"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/fragmentOrderDetails_rl_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/fragmentOrderDetails_tv_allCoas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="33.33"
                android:textColor="#FF0000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fragmentOrderDetails_tv_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:background="#FF8247"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="@string/fragmentBook_tv_buyNow"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            style="@style/view_diliver_1px"
            android:layout_above="@id/fragmentOrderDetails_rl_buy" />
    </RelativeLayout>

</LinearLayout>