<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_me" >

                <LinearLayout
                    android:id="@+id/fragmentMe_ll_userInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <com.zyd.widget.CircleImageView
                        android:id="@+id/fragmentMe_circleImageView_userPic"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/userpic_default"
                        android:contentDescription="@null" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/fragmentMe_tv_userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1333333333"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/fragmentMe_ll_grade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/fragmentMe_tv_grade"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:text="lv1"
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/fragmentMe_tv_gradeName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="普通会员"
                                android:textColor="#000000" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View style="@style/view_diliver_1px" />

            <include layout="@layout/fragment_me_usermsg" />
        </LinearLayout>

        <View style="@style/view_diliver_10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragmentMe_tv_myOrder"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fragmentMe_tv_viewMoreOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:drawableEnd="@drawable/icon_forward"
                android:drawablePadding="3dp"
                android:drawableRight="@drawable/icon_forward"
                android:text="@string/fragmentMe_tv_viewMoreOrders"
                android:textSize="13sp" />
        </RelativeLayout>

        <View style="@style/view_diliver_1px" />

        <include layout="@layout/fragment_me_order" />

        <View style="@style/view_diliver_10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/fragmentMe_rl_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp" >

                <ImageView
                    android:id="@+id/fragmentMe_iv_address"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/icon_address"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/fragmentMe_tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/fragmentMe_iv_address"
                    android:layout_toRightOf="@id/fragmentMe_iv_address"
                    android:text="@string/fragmentMe_tv_myAddress"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/icon_forward"
                    android:contentDescription="@null" />
            </RelativeLayout>

            <View style="@style/view_diliver_1px" />

            <RelativeLayout
                android:id="@+id/fragmentMe_rl_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp" >

                <ImageView
                    android:id="@+id/fragmentMe_iv_coupon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/icon_coupon"
                    android:contentDescription="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/fragmentMe_iv_coupon"
                    android:layout_toRightOf="@id/fragmentMe_iv_coupon"
                    android:text="@string/fragmentMe_tv_myCoupon"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/fragmentMe_tv_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:drawableEnd="@drawable/icon_forward"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/icon_forward"
                    android:text="0" />
            </RelativeLayout>

            <View style="@style/view_diliver_10dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>